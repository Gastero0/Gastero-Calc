<div class="main-ui">
    <div class="calc-box">
        <h2>OBLICZENIA</h2>
        
        <div class="field">
            <label>Ilosc</label>
            <input type="text" id="ilosc" placeholder="np. 1" oninput="liveOblicz()">
        </div>

        <div class="field">
            <label>Kupno (szt)</label>
            <input type="text" id="kupno" placeholder="np. 100k" oninput="liveOblicz()">
        </div>

        <div class="field">
            <label>Sprzedaz (szt)</label>
            <div class="rel">
                <input type="text" id="sprzedaz" placeholder="np. 150k" oninput="checkSniper(); liveOblicz()">
                <button id="sniperBtn" onclick="applySniper()">-7$</button>
            </div>
        </div>

        <div class="res-area" id="wynikArea">
            <div id="wynikContent" style="color: #2a3a5a; font-size: 20px;">Zysk...</div>
        </div>
        
        <button class="clear-btn" onclick="resetForm()">WYCZYSC</button>
    </div>

    <div class="right-bar">
        <div class="cmd-box">
            <label style="color: #39ff14; font-size: 12px;">KOMENDA</label>
            <div class="cmd-out" id="commandOutput">/wystaw 1 ...</div>
            <button class="btn-copy" id="copyBtn" onclick="copyCommand()">KOPIUJ</button>
        </div>

        <div class="sniper-config">
            <h4>Kwota do odjecia:</h4>
            <input type="text" id="sniperValue" value="7" oninput="updateSniperLabel()">
        </div>

        <div class="kurs-config">
            <input type="text" id="kursPLN" value="6000" oninput="liveOblicz()">
            <span class="gray-info">$ = 1.00 zl</span>
        </div>

        <div class="author-tag">BY GASTERO</div>
    </div>
</div>

<script>
function updateSniperLabel() {
    let val = document.getElementById('sniperValue').value;
    document.getElementById('sniperBtn').innerText = "-" + (val || "0") + "$";
}

function convertShortcuts(val) {
    if (!val) return 0;
    let clean = val.toString().toLowerCase().replace(/,/g, '').replace('$','').trim();
    if (clean.endsWith('mln')) return parseFloat(clean.replace('mln', '')) * 1000000;
    if (clean.endsWith('k')) return parseFloat(clean.replace('k', '')) * 1000;
    return parseFloat(clean) || 0;
}

function checkSniper() {
    let val = document.getElementById('sprzedaz').value.toLowerCase().trim();
    let btn = document.getElementById('sniperBtn');
    let isRound = val.endsWith('k') || val.endsWith('mln') || (val.length > 0 && val.endsWith('0'));
    btn.style.display = isRound ? "block" : "none";
}

function applySniper() {
    let currentVal = convertShortcuts(document.getElementById('sprzedaz').value);
    let minus = convertShortcuts(document.getElementById('sniperValue').value);
    if (currentVal > minus) {
        document.getElementById('sprzedaz').value = currentVal - minus;
        document.getElementById('sniperBtn').style.display = "none";
        liveOblicz();
    }
}

function formatValue(value) {
    let prefix = value < 0 ? "-" : "";
    return prefix + Math.abs(Math.floor(value)).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ') + '$';
}

function liveOblicz() {
    let rawCena = document.getElementById('sprzedaz').value;
    let przeliczonaCena = convertShortcuts(rawCena);
    document.getElementById('commandOutput').innerText = "/wystaw 1 " + (rawCena === "" ? "..." : przeliczonaCena);

    let valIlosc = document.getElementById('ilosc').value;
    let valKupno = document.getElementById('kupno').value;
    let valSprzedaz = document.getElementById('sprzedaz').value;

    let area = document.getElementById('wynikArea');
    let content = document.getElementById('wynikContent');

    if(!valIlosc || !valKupno || !valSprzedaz) {
        area.style.borderColor = "#4a5a7a";
        area.style.boxShadow = "none";
        return;
    }

    let ilosc = convertShortcuts(valIlosc);
    let kupno = convertShortcuts(valKupno);
    let sprzedaz = convertShortcuts(valSprzedaz);
    let kurs = convertShortcuts(document.getElementById('kursPLN').value);

    let zyskFinalny = (ilosc * sprzedaz * 0.98) - (ilosc * kupno);
    let zyskZl = zyskFinalny / (kurs || 6000);
    
    let mainColor, borderColor, borderGlow;

    if (zyskFinalny > 0) {
        mainColor = "#39ff14"; 
        borderColor = "#39ff14";
        borderGlow = "rgba(57,255,20,0.2)";
    } else if (zyskFinalny < 0) {
        mainColor = "#ff4444"; 
        borderColor = "#ff4444";
        borderGlow = "rgba(255,68,68,0.2)";
    } else {
        mainColor = "#ffcc00"; 
        borderColor = "#ffaa00";
        borderGlow = "rgba(255,170,0,0.2)";
    }

    area.style.borderColor = borderColor;
    area.style.boxShadow = `inset 0 0 25px ${borderGlow}`;

    content.innerHTML = `
        <div class="val" style="color: ${mainColor}; text-shadow: 3px 3px 0px #000">${formatValue(zyskFinalny)}</div>
        <div class="sub-container">
            <span class="pln-label">ZYSK PLN: </span>
            <span class="pln-val" style="color: ${mainColor}">${zyskZl.toFixed(2)} zl</span>
        </div>
    `;
}

function copyCommand() {
    navigator.clipboard.writeText(document.getElementById('commandOutput').innerText);
}

function resetForm() {
    document.getElementById('ilosc').value = '';
    document.getElementById('kupno').value = '';
    document.getElementById('sprzedaz').value = '';
    document.getElementById('sniperBtn').style.display = "none";
    document.getElementById('commandOutput').innerText = "/wystaw 1 ...";
    
    let area = document.getElementById('wynikArea');
    area.style.borderColor = "#4a5a7a";
    area.style.boxShadow = "none";
    document.getElementById('wynikContent').innerHTML = '<div style="color: #2a3a5a; font-size: 20px;">Zysk...</div>';
}
</script>
</body>
